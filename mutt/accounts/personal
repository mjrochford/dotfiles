## Receive options.
set imap_user=mrochford45@gmail.com
set imap_pass=`pass show mutt/personal`

# IMAP 
set folder = "imaps://$imap_user@imap.gmail.com/"
set spoolfile = "+INBOX"
set record = "+Sent"
set postponed = "+Drafts"

## Send options.
set smtp_url=smtps://$imap_user:$imap_pass@smtp.gmail.com
set realname='Matt Rochford'
set from=$imap_user
set hostname="gmail.com"
set signature="Matt Rochford"

# Connection options
set ssl_force_tls = yes
unset ssl_starttls

## Hook -- IMPORTANT!
account-hook $folder "set imap_user=$imap_user imap_pass=$imap_pass"
