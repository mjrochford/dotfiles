## Receive options.
set imap_user=mattjr@uw.edu
set imap_pass=`pass show mutt/school`

# IMAP 
set folder = "imaps://$imap_user@imap.gmail.com/"
set spoolfile = "+INBOX"
set record = "+Sent"
set postponed = "+Drafts"

## Send options.
set realname='Matt Rochford'
set hostname="gmail.com"
set from=$imap_user
set smtp_pass=$imap_pass

set smtp_url=smtps://$imap_user@smtp.gmail.com

# Connection options
set ssl_force_tls = yes
unset ssl_starttls

## Hook -- IMPORTANT!
account-hook $folder "set imap_user=$imap_user imap_pass=$imap_pass"
