## Receive options.
set imap_user=mrochford45@gmail.com
set imap_pass=`gpg -q -d ~/.passwords/mutt-personal-pass.gpg`

# IMAP: offlineimap
set folder = "~/Mail/"
source ~/.mutt/mailboxes
set spoolfile = "+personal/INBOX"
set record = "+personal/Sent\ Items"
set postponed = "+personal/Drafts"

## Send options.
set smtp_url=smtps://$imap_user:$imap_pass@smtp.gmail.com
set realname='Matt Rochford'
set from=$imap_user
set hostname="gmail.com"
set signature="Matt Rochford"

# Connection options
set ssl_force_tls = yes
unset ssl_starttls

## Hook -- IMPORTANT!
account-hook $folder "set imap_user=mrochford45@gmail.com imap_pass=`gpg -q -d ~/.passwords/mutt-personal-pass.gpg`"
